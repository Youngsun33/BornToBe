<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/burgundy"
    tools:context=".HandAnalysisActivity">

    <ImageView
        android:id="@+id/activity_hand_analysis_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_logo_03"
        app:layout_constraintBottom_toTopOf="@+id/activity_hand_analysis_ivBG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/activity_hand_analysis_ivBG"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_round_square_white"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_hand_analysis_iv" />

    <ImageView
        android:id="@+id/activity_hand_analysis_ivImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toTopOf="@+id/activity_hand_analysis_btnImageUpload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_hand_analysis_ivBG"
        tools:srcCompat="@tools:sample/avatars" />

    <android.widget.Button
        android:id="@+id/activity_hand_analysis_btnImageUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_button_burgundy"
        android:text="@string/activity_hand_analysis_btnImageUpload"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/activity_hand_analysis_btnAnalysis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_hand_analysis_ivImage"
        app:layout_constraintVertical_bias="0.5" />

    <android.widget.Button
        android:id="@+id/activity_hand_analysis_btnAnalysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_button_burgundy"
        android:text="@string/activity_hand_analysis_btnAnalysis"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_hand_analysis_btnImageUpload" />

</androidx.constraintlayout.widget.ConstraintLayout>